<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="br.com.futeboldospais.futeboldospais.controller.ClassificacaoFragment">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/titulo"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="-5dp"
        android:layout_marginStart="-5dp"
        android:layout_marginTop="-5dp"
        android:background="@color/white"
        android:focusable="false"
        app:cardCornerRadius="0dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/btn_voltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="11dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/ic_voltar" />

            <RadioGroup
                android:id="@+id/toggle"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:background="@drawable/pink_out_line"
                android:checkedButton="@+id/offer"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rbt_master"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/arredondar_borda_esq_branco"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Geral"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/rbt_senior"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginTop="1dp"
                    android:background="@drawable/arredondar_borda_dir_branco"
                    android:button="@null"
                    android:gravity="center"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:text="Quartas"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </RadioGroup>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:id="@+id/scroll_classificacao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/titulo">

        <RelativeLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/painel_esq"
                android:layout_width="155dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/titulo_tabela_esq"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/borda_inferior"
                    android:orientation="horizontal"
                    android:textColor="@color/grayLight">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:paddingStart="15dp"
                        android:text="EQUIPE" />

                </LinearLayout>

                <ListView
                    android:id="@+id/classificacao_tabela_esq"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/titulo_tabela_esq"
                    android:fastScrollEnabled="false"
                    android:scrollbars="none" />

            </RelativeLayout>

            <HorizontalScrollView
                android:id="@+id/painel_dir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_toEndOf="@+id/painel_esq">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/titulo_tabela_dir"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:background="@drawable/borda_inferior"
                        android:orientation="horizontal"
                        android:textColor="@color/grayLight">

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="PG" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="J" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="V" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="E" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="D" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="GP" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="GC" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="SG" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="CA" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="CV" />

                        <TextView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:gravity="center"
                            android:text="PD" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/classificacao_tabela_dir"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/titulo_tabela_dir"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:fastScrollEnabled="false"
                        android:scrollbars="none" />

                </RelativeLayout>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/txt_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/painel_esq"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="CRITÉRIOS DE DESEMPATE"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_titulo"
                android:layout_marginTop="10dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="1º Menor número de pontos disciplinares;"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_criterio_1"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="2º Maior número de vitórias;"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_criterio_2"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="3º Confronto direto, sem computar-se saldo de gols;"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_criterio_3"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="4º Menor número de cartões vermelhos;"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_criterio_4"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="5º Maior saldo de gols;"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_criterio_5"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="6º Maior número de gols a favor;"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/txt_criterio_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@id/txt_criterio_6"
                android:layout_marginTop="5dp"
                android:gravity="start"
                android:paddingStart="5dp"
                android:text="7º Sorteio."
                android:textSize="10sp" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
