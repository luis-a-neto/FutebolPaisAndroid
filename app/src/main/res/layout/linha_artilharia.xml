<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/txt_top_3"
        android:layout_width="40dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignParentStart="true"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/escudo_equipe"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/txt_top_3"
        android:textAlignment="center" />

    <LinearLayout
        android:id="@+id/div_jogador"
        android:layout_toEndOf="@id/escudo_equipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_artilheiro"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_posicao"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="10sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/txt_gols"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:gravity="center"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="22dp"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>